/*分类列表样式一 开始*/  

.nav_left-01{  
/*设置行内块级元素（没使用定位）*/  
display: inline-block; width: 25%; height: 90%; background: #f5f5f5; text-align: center;  }  
/*左侧栏list的item*/  
.nav_left-01 .nav_left_items{ height: 80rpx;line-height: 80rpx;font-size: 28rpx;  border-bottom: 1px solid #fff; border-left: 5rpx solid transparent}  
/*左侧栏list的item被选中时*/  
.nav_left-01 .nav_left_items.active{background: #fff; color: #ff2b29; border-left: 5rpx solid #ff2b29}  
/*右侧栏主盒子*/  
.nav_right-01{ 
/*右侧盒子使用了绝对定位*/  
position: absolute; top: 0;right: 0; flex: 1; width: 75%; height: 1000rpx;padding: 10rpx; box-sizing: border-box; background: #fff; }  
/*右侧栏list的item*/  
.nav_right-01 .nav_right_items{ float: left;width: 33.33%;height: 220rpx;text-align: center; }  
.nav_right-01 .nav_right_items image{  width:120rpx; height:120rpx;margin-top: 25rpx;}  
.nav_right-01 .nav_right_items text{display: block; margin-top: 25rpx;  ont-size: 28rpx; color: black;
/*设置文字溢出部分为...*/overflow: hidden; white-space: nowrap; text-overflow: ellipsis; } 
.nodata_text{color: black;font-size: 28rpx;  text-align: center; }

/*分类列表样式一 结束*/  

