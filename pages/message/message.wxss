.weui-cells::after,.weui-cells::before {
  border: 0;
}
.message-title {
  width: 319rpx;
  display:-webkit-box;
  -webkit-line-clamp:1;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;
}
.noborder::before {
  border: 0;
}
.message-fun {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  height: 150rpx;
  margin: auto;
  background: #fff;
}
.message-fun view {
  width: 180rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border: 2rpx solid #aaa;
  border-radius: 15rpx;
  margin: auto 10rpx;
}