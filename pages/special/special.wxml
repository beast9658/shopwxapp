<view class="page">
  <view class="main">
    <view class="show-img">
      <image src="/image/banner.png" mode="scaleToFill" style="width:100%;height:200rpx;margin:10rpx 0"></image>
    </view>
    <view class="recommend">
      <view class="recommend-item" wx:for="{{recommendItem}}" wx:key="index">
        <view class="recommend-item-body">
          <image src="{{item.img}}" mode="scaleToFill" style="width:300rpx;height:300rpx;margin:5rpx;background:#aaa;border-radius: 10rpx"></image>
          <view>{{item.name}}</view>
          <view style="color:#ff5d45;">ï¿¥{{item.price}}</view>
        </view>
      </view>
    </view>
  </view>
</view>