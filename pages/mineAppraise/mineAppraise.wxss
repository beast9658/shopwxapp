.page {
  padding: 0 25rpx;
}
.item-appraise-has-body-imgs {
  display: flex;
  position: relative;
  flex-wrap: wrap;
  padding: 30rpx 0;
}
.item-appraise-has-body-size {
  color: #868489;
  font-size: 24rpx;
}
.item-appraise-has-head-sub {
  font-size:26rpx;
  color:#333;
  display: flex;
  justify-content: space-between;
}

.order-list-item-body {
  display: flex;
  padding: 30rpx;
  background: #f7f7f7;
}
.order-list-item-body-mes {
  width: 500rpx;
}
.order-list-item-body-mes view {
  display:-webkit-box;
  -webkit-line-clamp:1;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;
  line-height: 50rpx;
}

.extra {
  padding: 30rpx 0;
  border-top: 2rpx solid #777;
}
.item-appraise-has-head-sub-extra {
  padding: 5rpx 20rpx;
  border: 2rpx solid #777;
  border-radius: 30rpx;
  font-size: 22rpx;
}