<view class="page">
  <view class="address-input">
    <form bindsubmit="formSubmit" bindreset="formReset">
      <view class="head">
        <image src="{{headPath}}" style="width:130rpx;height:130rpx;"></image>
        <view style="color:#ff5d24;font-size:26rpx;" bindtap="changeHead">更换头像</view>
        <input name="head" style="display:none" value="{{headPath}}"></input>
      </view>
      <view class="section">
        <view>昵称</view>
        <input class="" name="name" placeholder="昵称" />
      </view>
      <view class="section address-phone">
        <view>ID</view>
        <input name="id" placeholder="ID" type="number"/>
      </view>
      <view class="section">
        <view>性别</view>
        <picker mode="selector" bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
          <input name="sex" placeholder="性别" value="{{array[index]}}"/>
        </picker>
      </view>
      <view class="btn-area">
        <button formType="submit" class="btn-area-save">保存</button>
      </view>
    </form>
  </view>
</view>