.setwindow-body-item-title {
  padding-top:30rpx; 
}
.setwindow-body-item-title,.setwindow-body-count-title {
  color: #777;
  font-size: 26rpx;
}


.edit {
  color: #fff;
  display: flex;
  justify-content: space-between;
  margin: 50rpx 60rpx 0;
}
.edit-left {
  display: flex;
}
.edit-right {
  font-size: 26rpx;
}
.cannotbuy {
